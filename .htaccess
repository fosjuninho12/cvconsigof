RewriteEngine On
Options All -Indexes

# Não reescrever arquivos/pastas reais (CSS/JS/img)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Router (CoffeeCode) - mantém querystring e encerra regra
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?route=/$1 [QSA,L]
