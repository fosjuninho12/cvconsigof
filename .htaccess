RewriteEngine On
Options All -Indexes

# BLINDAGEM: nunca mandar assets para o router
RewriteRule ^shared/ - [L]
RewriteRule ^themes/ - [L]
RewriteRule ^storage/ - [L]

# NÃ£o reescrever arquivos/pastas reais (CSS/JS/img)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Router (CoffeeCode)
RewriteRule ^(.*)$ index.php?route=/$1 [QSA,L]
